<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amolgursali.advertiseapp.MainActivity">

   <!-- <Button
        android:layout_width="match_parent"
        android:id="@+id/button"
        android:text="click"
        android:layout_height="wrap_content" />-->

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adunitadd"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </com.google.android.gms.ads.AdView>


    <Button
        android:layout_width="match_parent"
        android:id="@+id/button"
        android:text="Interstitial Ads"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:text="Native Ads"
        android:id="@+id/nativeads"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/videoads"
        android:layout_below="@+id/button"
        android:text="Video Ads"
        android:layout_height="wrap_content" />



</RelativeLayout>
